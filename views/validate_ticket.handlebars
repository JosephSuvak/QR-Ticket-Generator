{{#unless ticket}}
<div class="flex justify-center">
  <h3 class="m-5 text-5xl text-red-500 font-mono font-extrabold">No tickets found currently, very sad.</h3>
</div>
{{/unless}}
{{#if ticket}}
<section>
  <ol class="space-y-4">
    <li id="{{ticket.id}}">
      {{> ticket-info ticket}}
    </li>
    <div id="redeem_ticket">
      <button
        class="text-black bg-gradient-to-r from-red-700 via-red-400 to-red-700 text-xl font-extrabold rounded-xl p-2 m-2"
        type="submit">REDEEM TICKET</button>
    </div>
  </ol>
</section>
{{/if}}


<script src="/javascript/redeem_ticket.js"></script>