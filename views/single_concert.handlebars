{{#unless concert}}
<div class="relative h-48 m-8 overflow-hidden rounded-lg bg-black shadow-xl">
  <div class="absolute z-30 flex w-full h-full">
    <div class="relative z-30 w-5/6 px-6 py-8 text-white md:py-10 md:w-1/2 sm:py-4 sm:w-full">
      <h2 class="m-4 text-5xl">Your New Show?</h2>
      <button id="logout"
        class="text-black bg-gradient-to-r from-yellow-400 via-pink-600 to-purple-500 text-xl font-extrabold rounded-xl mr-2 p-2">
        Log Out
      </button>
      <a class="text-black bg-gradient-to-r from-yellow-400 via-pink-600 to-purple-500 text-xl font-extrabold rounded-xl mr-2 p-2"
        href="/account">My Account</a>
    </div>
    <div class="absolute top-0 right-0 flex w-full h-full">
      <div class="w-1/3 h-full bg-black"></div>
      <div class="relative w-1/3">
        <svg fill="currentColor" viewBox="0 0 100 100" class="absolute inset-y-0 z-20 h-full text-black">
          <polygon id="diagonal" points="0,0 100,0 50,100 0,100"></polygon>
        </svg>
        <svg fill="currentColor" viewBox="0 0 100 100"
          class="absolute inset-y-0 z-10 h-full ml-6 text-white opacity-50">
          <polygon points="0,0 100,0 50,100 0,100"></polygon>
        </svg>
      </div>
    </div>
  </div>
  <div class="absolute top-0 right-0 block w-9/12 h-full">
    <img alt="mic on table" class="object-cover min-w-full h-full" src="/assets/images/neon_ticket.jpg" />
  </div>
</div>
<div class="flex justify-center">
  <h3 class="m-5 text-5xl text-red-500 font-mono font-extrabold">No concerts found currently, very sad.</h3>
</div>
{{/unless}}
{{#if concert}}
<div class="relative h-48 m-8 overflow-hidden rounded-lg bg-black shadow-xl">
  <div class="absolute z-30 flex w-full h-full">
    <div class="relative z-30 w-5/6 px-6 py-8 text-white md:py-10 md:w-1/2 sm:py-4 sm:w-full">
      <h2 class="m-4 text-5xl">Your New Show?</h2>
      <button id="logout"
        class="text-black bg-gradient-to-r from-yellow-400 via-pink-600 to-purple-500 text-xl font-extrabold rounded-xl mr-2 p-2">
        Log Out
      </button>
      <a class="text-black bg-gradient-to-r from-yellow-400 via-pink-600 to-purple-500 text-xl font-extrabold rounded-xl mr-2 p-2"
        href="/account">My Account</a>
    </div>
    <div class="absolute top-0 right-0 flex w-full h-full">
      <div class="w-1/3 h-full bg-black"></div>
      <div class="relative w-1/3">
        <svg fill="currentColor" viewBox="0 0 100 100" class="absolute inset-y-0 z-20 h-full text-black">
          <polygon id="diagonal" points="0,0 100,0 50,100 0,100"></polygon>
        </svg>
        <svg fill="currentColor" viewBox="0 0 100 100"
          class="absolute inset-y-0 z-10 h-full ml-6 text-white opacity-50">
          <polygon points="0,0 100,0 50,100 0,100"></polygon>
        </svg>
      </div>
    </div>
  </div>
  <div class="absolute top-0 right-0 block w-9/12 h-full">
    <img alt="mic on table" class="object-cover min-w-full h-full" src="/assets/images/neon_ticket.jpg" />
  </div>
</div>
<section>
  <input name="singleConcertUser" class="hidden" type="text" value="{{user_id}}">
  <ol id="single_concert" class="space-y-4">
    <li id="{{concert.id}}">
      <input name="singleConcertID" class="hidden" type="text" value="{{concert.id}}">
      {{> concert-info concert}}
      <div class="m-4 text-black">
        <button
          class="text-black bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500 text-xl font-extrabold rounded-xl p-2 m-4">ADD SHOW TO MY ACCOUNT</button>
      </div>
    </li>
    
  </ol>
</section>
{{/if}}

<script src="/javascript/add_ticket.js"></script>
<script src="/javascript/logout.js"></script>