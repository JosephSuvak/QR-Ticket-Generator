<div class="relative h-48 m-8 overflow-hidden rounded-lg bg-black shadow-xl">
  <div class="absolute z-30 flex w-full h-full">
    <div class="relative z-30 w-5/6 px-6 py-8 text-white md:py-10 md:w-1/2 sm:py-4 sm:w-full">
      <h2 class="m-4 text-5xl">Your Tickets</h2>
      <button id="concert" class="text-black bg-gradient-to-r from-yellow-400 via-pink-600 to-purple-500 text-xl font-extrabold rounded-xl mr-4 p-2">
        More Shows
      </button>
      <button id="logout" class="text-black bg-gradient-to-r from-yellow-400 via-pink-600 to-purple-500 text-xl font-extrabold rounded-xl mr-2 p-2">
        Log Out
      </button>
    </div>
    <div class="absolute top-0 right-0 flex w-full h-full">
      <div class="w-1/3 h-full bg-black"></div>
      <div class="relative w-1/3">
        <svg fill="currentColor" viewBox="0 0 100 100" class="absolute inset-y-0 z-20 h-full text-black">
          <polygon id="diagonal" points="0,0 100,0 50,100 0,100"></polygon>
        </svg>
        <svg fill="currentColor" viewBox="0 0 100 100"
          class="absolute inset-y-0 z-10 h-full ml-6 text-white opacity-50">
          <polygon points="0,0 100,0 50,100 0,100"></polygon>
        </svg>
      </div>
    </div>
  </div>
  <div class="absolute top-0 right-0 block w-9/12 h-full">
    <img alt="mic on table" class="object-cover min-w-full h-full" src="/assets/images/micdrop.jpg" />
  </div>
</div>
{{#unless tickets.length}}
<div class="flex justify-center">
<h3 class="m-5 text-5xl text-red-500 font-mono font-extrabold">No tickets currently.</h3>
</div>
{{/unless}}
{{#if tickets.length}}
<section>
  <ol class="space-y-4">
    {{#each tickets as |ticket|}}
    
    <li>
      {{> ticket-info ticket}}
      <a href="/api/ticket/{{ticket.id}}"
        class="view_concert text-black bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500 text-xl font-extrabold rounded-xl p-2">VIEW
        TICKET</a>
    </li>
    
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/logout.js"></script>
<script src="/javascript/concert.js"></script>